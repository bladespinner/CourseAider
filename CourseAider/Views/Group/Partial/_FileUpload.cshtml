
<form action="/api/File/@ViewData["groupId"]" method="post" enctype="multipart/form-data">
    <div class="form-group form-group-sm">
        <div class="control-label">
            <h2 style="display:inline">Upload |</h2> Visible <input id="fileVisibility" type="checkbox" name="visible" />
        </div>
    </div>

    <div class="form-group" id="uploadControls">
        <div class="control-label">
            Select file(s) to upload :
        </div>
        <div class="form-control">
            <input id="fileUpload" type="file" multiple="multiple" />
        </div>
        @*<ul id="uploadResults"></ul>*@
    </div>
    <div class="form-group hidden" id="uploadProgress">
        <div class="control-label">
            <img src="http://www.tj-auctions.com/images/loading.gif" alt="" />
        </div>
    </div>
    <div class="form-group">
        <div class="control-label">
            <a class="btn btn-primary" style="width:100%;" id="btnUpload">Upload</a>
        </div>
    </div>
</form>

<script>
    var uploadPath = "/api/File/@ViewData["groupId"]";
</script>