@{
    ViewBag.Title = "Index";
}

<section class="ca-bg1">
    @using (Html.BeginContainer())
    {
        using (Html.BeginRow())
        {
            using (Html.BeginColumn(5))
            {
                <h1>CourseAider - Advancing togheter against ignorance</h1>
                <p>
                    CourseAider is an interactive system aimed at students and teachers,
                    which eases education and group work by bringing toghether the students
                    and the teachers in collective discussions.
                </p>
            }
            using (Html.BeginColumn(7))
            {
                @Html.Action("LatestCourses", "Home")
            }
        }
    }
</section>

<section class="ca-bg2 text-center">
    @using (Html.BeginContainer())
    {
        using (Html.BeginRow())
        {
            using (Html.BeginColumn(12))
            {
                if (!Request.IsAuthenticated)
                { 
                    @Html.ActionLink("March with us", "Register", "Account", null, new { @class = "btn btn-primary btn-lg" })
                }
                else
                {
                    <p>Visit <a href="">Your courses</a> or see <a href="">Your profile</a></p>
                }
            }
        }
    }
</section>

<section class="ca-bg1">
    @using (Html.BeginContainer())
    {
        using (Html.BeginRow())
        {
            using (Html.BeginColumn(6))
            {
                @Html.Action("TopUsers", "Home")
            }
            using (Html.BeginColumn(6))
            {
                using (Html.BeginRow())
                {
                    using (Html.BeginColumn(6))
                    {
                        <strong>What do we offer for teachers:</strong>
                        <ul class="ca-checkbox-list">
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Intelligent knowlege management system.</li>
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Communication setup and management solution for courses.</li>
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Course creation, storage and organization of class materials.</li>
                        </ul>
                    }
                    using (Html.BeginColumn(6))
                    {
                        <strong>What do we offer for Students:</strong>
                        <ul class="ca-checkbox-list">
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Enchanced learning experience.</li>
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Ease of communication with tutors and fellow pupils.</li>
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Intelligent knowlege storing for simplest of ease.</li>
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Bright future.</li>
                            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Scholarship options.</li>
                        </ul>
                    }
                }

            }
        }
    }
</section>

